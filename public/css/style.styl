	border-top: 1px solid rgb(238, 238, 238);
	border-bottom: 1px solid rgb(255, 255, 255);
}

ul {
	margin: 4px 0 0 0;
}

label, h6 {
	color: #000;
	font-size: 13px;
	font-weight: normal;
}

.form-login {
	margin-bottom: 0;

	.tab-title {
		float: left;
		margin-left: 10px;
	}

	.block-header {
		margin-top: 40px;
		width: 580px;
		margin: 40px auto 0;

		@media (max-width: 768px) {
			width: 510px;
		}

