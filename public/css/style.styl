/*
	login window
*/
#login {
	label {
		margin-left: 2px;
	}

	.app-name {
		font-weight: bold;
		margin-bottom: 2px;
		font-size: 30px;
		width: 30%;
		line-height: 26px;

		@media (max-width: 576px) {
			font-size: 24px;
			line-height: 20px;
		}
	}

	.app-des {
		font-size: 18px;
		line-height: 1;
		margin: 0;

		@media (max-width: 576px) {
			font-size: 16px;
		}
	}

	.form-login {
		padding: 0px;
		margin: auto;
		position: relative;
	}

	.block-button {
		position: relative;

		button {
			background-color: unset;
			border: 0;
			cursor: pointer;
			padding: 0px;
			width: 100%;
			text-align: left;
			font-size: 16px;
			font-weight: bold;
			position: relative;

			&:focus {
				outline: none;
				-webkit-box-shadow: none;
				box-shadow: none;
			}

			.right-icon {
				width: 24px;
				height: 24px;
				background-repeat: no-repeat;
				background-position: center;
				position: absolute;
				right: 0px;
			}

			.color-helper {
				color: #000 !important;
				-webkit-text-fill-color: #000 !important;
			}
		}

		.btn_full, .btn_full_blue {
			display: block;
			border-bottom: 2px solid black !important;
			width: 100% !important;
			border-radius: 0;
			padding-bottom: 18px !important;
		}

		.btn_full {
			color: #000;
		}

		.btn_full_blue {
			color: #2646FF;
		}

		.description_title, .description {
			font-size: 14px;
			font-weight: bold;
			margin-bottom: 12px;
		}

		.description {
			font-weight: unset;
			padding-top: 0;
			margin-bottom: 29px;
			opacity: 0.7;
		}

		.description_helper {
			margin-bottom: 53px;
		}

		&.block-1 {
			padding: 20px 0px 29px 0px;

			.btn-toolbar {
				button {
					color: #B2B2B2;

					@media (min-width: 768px) {
						&:hover {
							color: black;
						}
					}

					&.btn-active {
						color: black;
					}
				}
			}

			.btnLoginPhone {
				width: 104px;
				margin-top: 17px;
				opacity: 0.4;
			}

			.right-icon {
				background-image: url('../images/btn-active-next.svg');
				top: 0px;
			}

			.right-icon-blue {
				background-image: url('../images/btn-active-next-blue.svg');
				top: 0px;
			}

			input {
				background-color: #F2F2F6;
				border: none;
				border-bottom: 2px solid #2646FF;
				border-radius: 0;
				border-top-left-radius: 9px;
				border-top-right-radius: 9px;
				outline: none;
				-webkit-box-shadow: none;
				-moz-box-shadow: none;
				box-shadow: none;
				color: #B2B2B2;
				padding: 15px 17px 17px;
				font-size: 16px;
				width: '100%';
				transition: background-color 0.4s;

				&:focus {
					outline: none;
					-webkit-box-shadow: none;
					box-shadow: none;
				}

				&:hover {
					background-color: #f2f2f6;
				}
			}

			input:-webkit-autofill, input:-webkit-autofill:hover, input:-webkit-autofill:focus, input:-webkit-autofill:active {
				-webkit-box-shadow: 0 0 0 30px #000 inset !important;
				-webkit-text-fill-color: #fff !important;
			}

			::placeholder {
				color: #2646FF;
				font-weight: 300;
			}
		}

		&.block-active {
			.btn_full {
				color: #2646FF;
				opacity: 1;

				.right-icon {
					background-image: url('../images/btn-active-next-blue.svg');
					color: #2646FF;
				}
			}

			input {
				background-color: black !important;
				-ms-background-color: #000;
				-mox-background-color: #000;
				-o-background-color: #000;
				color: white;

				// border-bottom: 2px solid #2646FF;
				&:hover {
					background-color: #000;
					-ms-background-color: #000;
					-mox-background-color: #000;
					-o-background-color: #000;
				}
			}
		}

		&.block-2 {
			padding: 20px 0px 29px 0px;

			button {
				padding: 20px 0 20px 0px;
			}

			.right-icon {
				background-image: url('../images/btn-active-next-blue.svg');
			}
		}
	}
}

